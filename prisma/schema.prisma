// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  empId       Int        @id @default(autoincrement())
  username    String     @unique
  password    String
  firstName   String
  lastName    String
  companyName String
  phNum       String
  hiredate    DateTime
  isFullTime  Boolean
  department  Department @relation(fields: [deptId], references: [deptId])
  deptId      Int
  address     Address
}

model Department {
  deptId      Int        @id @default(autoincrement())
  name        String     @unique
  description String
  employees   Employee[]
}

type Address {
  city  String
  state String
}
